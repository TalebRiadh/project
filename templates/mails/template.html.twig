{% extends 'base.html.twig' %}
{% block body %}
    {% if canal == constant('App\\Document\\Subscriber::CANAL_CHOICES')[0]%}
        <h1>Hello {{ name }}!</h1>
        <p>Thank you for subscribing from {{ canal }}.</p>
        <p>Here are your welcome files:</p>
        <ul>
            {% for file in files %}
                <li><a href="{{ file.url }}">{{ file.name }}</a></li>
            {% endfor %}
        </ul>
    {% else %}
        <h1>Hello {{ name }}!</h1>
        <p>Thank you for subscribing from {{ canal }}.</p>
        <p>Here are your welcome files:</p>
        <ul>
            {% for file in files %}
                <li><a href="{{ file.url }}">{{ file.name }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}

